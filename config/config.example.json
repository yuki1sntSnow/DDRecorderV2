{
  "root": {
    "check_interval": 60,
    "print_interval": 60,
    "data_path": "./",
    "logger": {
      "log_path": "./log",
      "log_level": "INFO"
    },
    "request_header": {},
    "uploader": {
      "lines": "AUTO"
    },
    "danmu_ass": {
      "font": "Noto Sans CJK SC",
      "font_size": 45,
      "duration": 6,
      "row_count": 12,
      "line_height": 40,
      "margin_top": 60,
      "scroll_end": -200
    },
    "account": {
      "default": {
        "username": "your_username",
        "password": "your_password",
        "region": "86",
        "access_token": "",
        "refresh_token": "",
        "cookies": {
          "SESSDATA": "your_sessdata",
          "bili_jct": "your_bili_jct",
          "DedeUserID": "your_uid",
          "DedeUserID__ckMd5": "your_ck_md5",
          "sid": "your_sid"
        }
      }
    }
  },
  "spec": [
    {
      "room_id": "123456",
      "recorder": {
        "keep_raw_record": false,
        "enable_danmu": true
      },
      "uploader": {
        "account": "default",
        "copyright": 2,
        "record": {
          "upload_record": true,
          "keep_record_after_upload": true,
          "split_interval": 3600,
          "title": "【{room_name}】{date} 录播",
          "tid": 27,
          "tags": [
            "直播录播"
          ],
          "desc": "{room_name} {date}",
          "cover": ""
        }
      }
    }
  ]
}
